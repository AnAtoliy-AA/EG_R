{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript"
  ],
  "overrides": [
    {
      "files": ["src/**/*Slice.ts"],
      "rules": { "no-param-reassign": ["error", { "props": false }] }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["react"],
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "semi": [ "error", "never" ],
    "@typescript-eslint/semi": "off"
  }
}
